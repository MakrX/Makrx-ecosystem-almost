# MakrX Store Backend Production Environment Configuration
# Application environment: production deployment
ENVIRONMENT=production
# Disable verbose debugging in production
DEBUG=false
# Secret key used for signing sessions
SECRET_KEY=YOUR_SECRET_KEY

# Database
# Connection string for the production database
DATABASE_URL=postgresql+asyncpg://USER:YOUR_DB_PASSWORD@db:5432/makrx_store
# Log SQL statements to console
DB_ECHO=false

# Redis
# Redis URL for caching and message broker
REDIS_URL=redis://redis:6379/0

# Authentication (Keycloak)
# Issuer URL from Keycloak (realm endpoint)
KEYCLOAK_ISSUER=https://auth.yourdomain.com/realms/makrx
# Client ID/audience for JWT tokens
KEYCLOAK_CLIENT_ID=makrx-store
# Base URL of the Keycloak server
KEYCLOAK_URL=https://auth.yourdomain.com
# Keycloak realm name
KEYCLOAK_REALM=makrx
# Client ID registered for the store backend
MAKRX_STORE_BACKEND_CLIENT_ID=makrx-store-backend
# Client secret for the store backend
MAKRX_STORE_BACKEND_CLIENT_SECRET=YOUR_CLIENT_SECRET

# S3/MinIO Storage
# Endpoint for S3 or MinIO service
S3_ENDPOINT=https://s3.yourdomain.com
# Bucket name for uploaded files
S3_BUCKET=makrx-uploads
# Access key for S3/MinIO
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
# Secret key for S3/MinIO
S3_SECRET_KEY=YOUR_S3_SECRET_KEY
# Region of the S3/MinIO service
S3_REGION=us-east-1
# Use SSL to connect to S3/MinIO
S3_USE_SSL=true

# Payments
# Stripe secret API key
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
# Stripe webhook signing secret
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET
# Stripe publishable key for the frontend
STRIPE_PUBLIC_KEY=YOUR_STRIPE_PUBLIC_KEY

# Razorpay key ID
RAZORPAY_KEY_ID=YOUR_RAZORPAY_KEY_ID
# Razorpay secret key
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_KEY_SECRET
# Razorpay webhook secret
RAZORPAY_WEBHOOK_SECRET=YOUR_RAZORPAY_WEBHOOK_SECRET

# MakrCave Integration
# Base URL for MakrCave service
SERVICE_MAKRCAVE_URL=https://api.makrcave.com

# Pricing Configuration
# Base fee charged to set up a job
PRICE_SETUP_FEE=50.0
# Cost per cubic centimeter for PLA material
RATE_PLA_PER_CM3=0.15
# Cost per cubic centimeter for ABS material
RATE_ABS_PER_CM3=0.18
# Cost per cubic centimeter for PETG material
RATE_PETG_PER_CM3=0.20
# Cost per cubic centimeter for resin material
RATE_RESIN_PER_CM3=0.35

# File Upload Limits
# Maximum allowed upload size in bytes
MAX_UPLOAD_SIZE=104857600
# Allowed file extensions for uploads
ALLOWED_UPLOAD_EXTENSIONS=.stl,.obj,.3mf,.step,.stp

# Rate Limiting
# Maximum requests allowed within the window
RATE_LIMIT_REQUESTS=100
# Time window in seconds for rate limiting
RATE_LIMIT_WINDOW=3600

# Email Configuration
# SMTP server host
SMTP_HOST=smtp.gmail.com
# SMTP server port
SMTP_PORT=587
# SMTP username credential
SMTP_USERNAME=your-email@example.com
# SMTP password or app token
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
# Use TLS for SMTP connections
SMTP_USE_TLS=true

# Celery
# URL for Celery message broker
CELERY_BROKER=redis://redis:6379/1
# URL for Celery result backend
CELERY_BACKEND=redis://redis:6379/1

# Logging
# Verbosity of log output
LOG_LEVEL=INFO
