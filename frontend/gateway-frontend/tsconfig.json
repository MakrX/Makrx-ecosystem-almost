{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["frontend/gateway-frontend/src/*"],
      "@components/*": ["frontend/gateway-frontend/components/*"],
      "@contexts/*": ["frontend/gateway-frontend/contexts/*"],
      "@pages/*": ["frontend/gateway-frontend/pages/*"],
      "@hooks/*": ["frontend/gateway-frontend/hooks/*"],
      "@lib/*": ["frontend/gateway-frontend/lib/*"]
    }
  },
  "include": [
    "src/**/*",
    "components/**/*",
    "contexts/**/*",
    "pages/**/*",
    "hooks/**/*",
    "lib/**/*",
    "*.ts",
    "*.tsx",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
